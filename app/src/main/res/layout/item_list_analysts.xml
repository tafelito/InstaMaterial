<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/AnalystList"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/analystPic"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:scaleType="centerInside"
        android:src="@drawable/global_profile" />

    <LinearLayout
        style="@style/SingleDoubleList"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/analystName"
            style="@style/SingleDoubleList.Item"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Patrick Oppenheimer" />

		<LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal" >

		    <TextView
		        android:id="@+id/analystSubtitleTicker"
		        style="@style/CompanySubTitleTextStyle"
		        android:visibility="gone" />

		    <TextView
		        android:id="@+id/analystSubtitle"
		        style="@style/SingleDoubleList.SubItem"
		        android:maxLines="1"
		        android:text="Medical Supplies &amp; Devices"
                android:ellipsize="end"/>
		</LinearLayout>
        
    </LinearLayout>

    <TextView
        android:id="@+id/feedSelector"
        style="@style/CompanyAnalystFeedAndWatchlistText"
        android:maxLines="1"
        android:text="@string/add_to_feed"/>

</LinearLayout>